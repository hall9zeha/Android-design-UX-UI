<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SheetsBottomFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/common_padding_default"
        tools:context=".fragments.NavigationDrawerFragment">

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnStandar"
            android:text="@string/standarBottom"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:strokeColor="@color/teal_200"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnModal"
            android:text="@string/modalBottom"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:strokeColor="@color/teal_200"/>


    </LinearLayout>
    <include layout="@layout/bottom_sheet"
        android:id="@+id/bottomSheet"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>